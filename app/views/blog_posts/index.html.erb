<h1 class="text-4xl font-bold text-center mt-6">Latest Blog Posts</h1>

<div class="max-w-4xl mx-auto mt-6">
  <% @blog_posts.each do |post| %>
    <div class="blog-card mb-6">
      <% if post.image.attached? %>
        <img src="<%= url_for(post.image) %>" class="w-full h-64 object-cover rounded-t-lg">
      <% end %>
      <div class="p-4">
        <h2 class="blog-title"><%= post.title %></h2>
        <p class="blog-content"><%= truncate(post.content, length: 150) %></p>
        <%= link_to "Read More", blog_post_path(post), class: "btn-read-more" %>
      </div>
    </div>
  <% end %>
</div>
